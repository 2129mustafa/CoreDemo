@model EntityLayer.Concrete.Message2

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yeni Mesaj Oluşturma</h1>

@using (Html.BeginForm("SendMessage", "Message2", FormMethod.Post))
{
    @Html.Label("Alıcı")
    @Html.TextBoxFor(x => x.ReceiverUser.WriterMail, new { @class = "form-control" });
    <br /><br />
    @Html.Label("Konu")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Subject, "", new { @style = "color:red" })
    <br />
    <br />
    @Html.Label("Mesajınız")
    @Html.TextBoxFor(x => x.MessageDetails, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.MessageDetails, "", new { @style = "color:red" })
    <br />
    <br />
    <button class="btn btn-info">Mesajı Gönder</button>
}

